{
  "name": "peasant",
  "description": "Warcraft 3 peasant (Russian voice lines)",
  "situations": [
    {
      "name": "prompt-submitted",
      "trigger": "UserPromptSubmit",
      "description": "User sends a prompt",
      "sounds": [
        "yes-milord.wav",
        "uh-huh.wav",
        "alright.wav",
        "well-im-off.wav",
        "work-again.wav",
        "what.wav"
      ]
    },
    {
      "name": "task-complete",
      "trigger": "Stop",
      "description": "Claude finished responding",
      "sounds": ["done.mp3", "im-ready.wav", "yes.wav", "alright.wav"]
    },
    {
      "name": "tool-failed",
      "trigger": "PostToolUseFailure",
      "description": "A tool call failed",
      "sounds": [
        "theyll-kill-me.wav",
        "ooh.wav",
        "have-to-fight.wav",
        "cant-build-here.m4a"
      ]
    },
    {
      "name": "session-start",
      "trigger": "SessionStart",
      "description": "New session begins",
      "sounds": ["work-again.wav", "im-ready.wav", "yes-milord.wav"]
    },
    {
      "name": "session-end",
      "trigger": "SessionEnd",
      "description": "Session ends",
      "sounds": ["death.mp3", "farewell.wav", "well-im-off.wav"]
    },
    {
      "name": "notification",
      "trigger": "Notification",
      "description": "Claude needs attention or permission",
      "sounds": ["im-being-pressured.wav", "what.wav"]
    },
    {
      "name": "subagent-start",
      "trigger": "SubagentStart",
      "description": "A subagent is spawned",
      "sounds": ["work-wont-run-away.wav"]
    },
    {
      "name": "admitted-wrong",
      "trigger": "flag",
      "description": "Claude admits a mistake or corrects itself",
      "sounds": [
        "dont-you-feel-sorry.wav",
        "theyll-kill-me.wav",
        "ooh.wav",
        "wish-it-were-you.wav"
      ]
    },
    {
      "name": "found-bug",
      "trigger": "flag",
      "description": "Claude found or fixed a bug",
      "sounds": ["we-caught-a-witch.wav"]
    },
    {
      "name": "user-angry",
      "trigger": "flag",
      "description": "User is frustrated, angry, or unhappy with the result",
      "sounds": [
        "dont-you-feel-sorry.wav",
        "theyll-kill-me.wav",
        "im-being-pressured.wav"
      ]
    },
    {
      "name": "user-grateful",
      "trigger": "flag",
      "description": "User is expressing gratitude, praise, or satisfaction",
      "sounds": ["yes-milord.wav", "alright.wav", "im-ready.wav"]
    },
    {
      "name": "spam-detected",
      "trigger": "spam",
      "description": "User sending too many prompts too fast",
      "sounds": ["are-you-the-king.wav", "im-being-pressured.wav", "wish-it-were-you.wav"]
    }
  ]
}
